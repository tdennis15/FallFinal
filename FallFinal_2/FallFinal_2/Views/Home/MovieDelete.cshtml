@model FallFinal_2.Models.Movie

@{
    ViewBag.Title = "MovieDelete";
}
<div class="jumbotron">
    <h2>Movie Delete</h2>
</div>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.M_Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           <b>Director</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Director.D_Name)
        </dd>


        <dt>
           <b>Movie Name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.M_Name)
        </dd>

        <dt>
            <b>Movie Year</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.M_Year)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Movie")
        </div>
    }
</div>
